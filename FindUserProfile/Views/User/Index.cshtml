@model IEnumerable<FindUserProfile.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table td, .table th {
        padding: 0.3rem;
    }
</style>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" border="1" cellpadding="0" font-size="48px">
    <thead class="bg-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreferredLocation)
            </th>                      
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Images/@item.ImageName" class="rounded-circle" width="40" height="40" asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience) Yr.
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreferredLocation)
            </td>            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning text-white" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                @Html.ActionLink("More Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })

            </td>
        </tr>
}
    </tbody>
</table>
